{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Create Alerts
        </h1>
    </div>

    <div class="formgroup">
        <form method="POST">
            <div class="form-group">
                <label for="alert_name"> Alert Name</label>
                <input type="text" class="form-control" placeholder="Name" id="alert_name" , name="alert_name">
            </div>
            <div class="form-group">
                <label for="item_url"> Item URL</label>
                <input type="text" class="form-control" placeholder="http:://" id="item_url" , name="item_url">
            </div>
            <div class="form-group">
                <label for="price_limit"> Price_Limit</label>
                <input type="text" class="form-control" placeholder="45.00" id="price_limit" , name="price_limit"
                       aria-describedby="descrip_block">
                <p id="descrip_block" class="help-block"> Your will receive email for the item under this price</p>
            </div>
            <button type="submit" class="btn btn-default navbar-btn">Create</button>
        </form>
    </div>
{% endblock %}