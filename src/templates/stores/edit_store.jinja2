{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">Edit Store</div>

    <form method='POST'>
        <div class="form-group">
            <label for="name"> Store Name</label>
            <input type="text" class="form-control" placeholder="Store name" , value='{{ store.name }}' id="name" ,
                   name="name">
        </div>

        <div class="form-group">
            <label for="url_prefix"> URL prefix</label>
            <input type="text" class="form-control" placeholder="https://..." , value='{{ store.url_prefix }}'
                   id="url_prefix" , name="url_prefix">
        </div>

        <div class="form-group">
            <label for="tag"> Tag name</label>
            <input type="text" class="form-control" placeholder="span" , value='{{ store.tag_name }}' id="tag" ,
                   name="tag" , aria-describedby="tag_help">
            <p id="tag_help" , class="help-block"> You can get the tag by choose the price and right click and choose
                inspect</p>
        </div>

        <div class="form-group">
            <label for="query"> Query</label>
            <input type="text" class="form-control" placeholder='{ "id":"price"}' value='{{ store.query }}' id="query" ,
                   name="query" , aria-describedby="query_help">
            <p id="queyhelp" , class="help-block"> You can get the query by choose the price and right click and choose
                inspect
                make sure use double quotation marks or it will fails</p>
        </div>

        <button type="submit" class="btn btn-success navbar-btn">Update</button>
    </form>
    </form>
{% endblock %}