{% extends "base.jinja2" %}
{% block content %}
    <div class="page_header">
        <h1> List of Stores</h1>
    </div>
    <div class="list-group">
        {% for store in stores %}
            <a class="list-group-item" , href="{{ url_for('stores.store_page', store_id = store._id) }}">
                <h4> {{ store.name }}</h4>
                <p> The store with the url {{ store.url_prefix }}</p></a>
        {% endfor %}
    </div>
    {% if session['email'] in config.ADMINS %}
        <a class="btn btn-success" , href="{{ url_for('stores.create_store') }}">Create New</a>
    {% endif %}
{% endblock %}