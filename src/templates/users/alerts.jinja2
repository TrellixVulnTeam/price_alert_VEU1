{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Your Alerts
            <small>a list of your alerts</small>
        </h1>
    </div>
    {% for alert in alerts %}
        <a class="list-group-item {{ 'list-group-item-warning' if not alert.active else '' }}" href="{{ url_for("alerts.get_alert_page", alert_id = alert._id) }}">
            {{ '<span class="glyphicon glyphicon-remove-circle" aria-hidden="true" ></span>' if not alert.active else '' }}
            <h4 class="list-group-item-heading">Alert for {{ alert.item.name }}</h4>
            <br class="list-group-item-text">Last Price Found
            <bold>{{ alert.item.price }}</bold>
            <br/>
            Last checked on
            <bold>{{ alert.last_checked.strftime("%d-%m-%Y at %H %M") }}</bold>
            </p>
        </a>
    {% endfor %}
    <a class = "btn btn-success" href = "{{ url_for("alerts.create_alert") }}"> Create New</a>
{% endblock %}